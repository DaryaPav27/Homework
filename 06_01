#include <iostream>
using namespace std;
int main()
{
	Задание 1
	int a, summa = 0;
	cout << "Enter number";
	cin >> a;
	while (a <= 500) {
		summa = summa + a;
		a = a + 1;
	}
	cout << "summa = " << summa;

	Задание 2
	int x, y, z, i = 1;
	cout << "Enter number x";
	cin >> x;
	cout << "Enter number y";
	cin >> y;
	if (y == 0)
	{
		i = 1;
	}
	else
	{
		z = 1;
		while (z <= abs(y))
		{
			i = i * x;
			z = z + 1;
		}
		if (y < 0)
		{
			i = 1 / i;
		}
	}
	cout << "Result = " << i;

	Задание 3
	int res = 0;
	for (int i = 1; i <= 1000; i++) {
		res = res + i;
	}
	res = res / 1000;
	cout << "Result = " << res;

	Задание 4

	int a, res = 1;
	cout << "Enter number";
	cin >> a;
	for (int i = a; i <= 20; i++) res *= i;
	cout << res;

	Задание 5

	int n;
	cout << "Enter number\n";
	cin >> n;
	for (int i = 1; i <= 10; ++i)
		cout << i << " * " << n << " = " << i * n << endl;

}
